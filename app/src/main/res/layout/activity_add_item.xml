<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/backdesign"
    android:layout_height="match_parent"
    tools:context=".ui.main.AddItemActivity">

    <TextView
        style="@style/TextandLayout"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD YOUR ITEM"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextandLayout"
        android:id="@+id/itemName"
        android:hint="Enter your Item's name"
        />
    <EditText
        style="@style/TextandLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemPrice"
        android:hint="Enter your Item's Price"
        />
    <EditText
        style="@style/TextandLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemImageName"
        android:hint="Enter your Item's Image Name"
        />
    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemDescription"
        style="@style/TextandLayout"

        android:hint="Enter your Item's Description"
        />

    <Button
        android:id="@+id/btnAddItem"
        style="@style/TextandLayout"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttondesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD ITEM"/>


</LinearLayout>